    <link rel="stylesheet" href="../public/css/home.css">
</head>
<body>
    <div><h2 class="col-5 mx-auto">Webcome to the Node.js Test API</h2></div>
    
    <table  class="table w-75 table-striped mx-auto">
        <thead>
            <div class="text-end" ><a  class="btn btn-warning btn-sm " href="/createUser">Create</a></div>
          <tr>
            <th scope="col">id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">City</th>

          </tr>
        </thead>
        <tbody>
        <% for (let i=0; i < listUsers.length; i++) {%>    
          <tr>
            <th ><%= listUsers[i].id %></th>
            <td><%= listUsers[i].name %></td>
            <td><%= listUsers[i].email %></td>
            <td><%= listUsers[i].city %></td>
            
          </tr>
        <% } %> 
        </tbody>
      </table>
</body>
</html>